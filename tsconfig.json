{
	"extends": "@hexatool/tsconfig",
	"compilerOptions": {
		// Add Bun type definitions
		"types": ["bun-types"],

		// Enable latest features
		"lib": ["ESNext"],
		"module": "esnext",
		"target": "esnext",

		// If TS 5.x+
		"moduleResolution": "bundler",
		"noEmit": true,
		"allowImportingTsExtensions": true,
		"moduleDetection": "force"
	},
	"exclude": ["dist", "node_modules"]
}
